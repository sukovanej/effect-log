{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": ["vitest/globals"],
    "paths": {
      "effect-log": [
        "./src/index.ts"
      ],
      "effect-log/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "examples"
  ]
}
